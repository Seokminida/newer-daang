<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/scalable_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B0D8D7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale_base_height="300"
        app:scale_base_width="400">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:scale_height="130"
            app:scale_width="200"
            app:scale_left="100"
            app:scale_top="90"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/login_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="INFORMATION"
            android:textStyle="bold"
            app:scale_height="30"
            app:scale_left="100"
            app:scale_textsize="25"
            app:scale_top="240"
            app:scale_width="200" />

    </com.ssomai.android.scalablelayout.ScalableLayout>

    <FrameLayout
        android:id="@+id/frame_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scalable_logo"
        android:padding="10dp">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:scale_base_height="100"
            app:scale_base_width="400">

            <TextView
                android:id="@+id/developers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/aqua_background_round"
                android:text="Developers"
                android:textColor="@color/black"
                app:scale_height="100"
                app:scale_textsize="20"
                app:scale_width="130"/>

            <TextView
                android:id="@+id/developers_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/aqua_background_round"
                android:text="developers_detail"
                android:textColor="@color/black"
                app:scale_height="100"
                app:scale_left="130"
                app:scale_textsize="20"
                app:scale_width="270"
                android:padding="10dp"/>
            </com.ssomai.android.scalablelayout.ScalableLayout>
        </FrameLayout>
    <FrameLayout
        android:id="@+id/frame_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_dev"
        android:padding="10dp">
    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:scale_base_height="100"
        app:scale_base_width="400">
            <TextView
                android:id="@+id/app_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/aqua_background_round"
                android:text="Application"
                android:textColor="@color/black"
                app:scale_height="100"
                app:scale_textsize="20"
                app:scale_width="130"/>

            <TextView
                android:id="@+id/app_info_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/aqua_background_round"
                android:text="app_info_detail"
                android:textColor="@color/black"
                app:scale_height="100"
                app:scale_left="130"
                app:scale_textsize="20"
                app:scale_width="270"
                android:padding="10dp"/>
        </com.ssomai.android.scalablelayout.ScalableLayout>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/frame_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="60"
            app:scale_base_width="400"
            android:background="@drawable/darker_gray_background">

            <ImageButton
                android:id="@+id/bottombar_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="0"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/home_lined" />

            <ImageButton
                android:id="@+id/bottombar_bookmark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="100"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/bookmark_lined" />

            <ImageButton
                android:id="@+id/bottombar_mypage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="200"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/mypage_lined" />

            <ImageButton
                android:id="@+id/bottombar_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="300"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/info_lined" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
