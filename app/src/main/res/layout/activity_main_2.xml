<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#000000" />

    <FrameLayout
        android:id="@+id/frame_dailyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            app:scale_base_height="80"
            app:scale_base_width="400">


            <TextView
                android:id="@+id/bestword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_round"
                android:clickable="true"

                android:elevation="5dp"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:text="오늘의 베스트 단어"
                android:textColor="@color/darker_gray2"
                android:textStyle="bold"
                app:scale_height="60"
                app:scale_left="9"
                app:scale_textsize="20"
                app:scale_top="10"
                app:scale_width="382" />

        </com.ssomai.android.scalablelayout.ScalableLayout>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.45"
        app:layout_constraintBottom_toTopOf="@id/frame_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_dailyword" />

    <FrameLayout
        android:id="@+id/frame_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frame_category2"
        app:layout_constraintTop_toBottomOf="@+id/frame_dailyword">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            app:scale_base_height="140"
            app:scale_base_width="400">


            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/scalable_military"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_round"
                android:backgroundTint="#E7F3F3"
                android:clickable="true"
                android:elevation="5dp"
                android:gravity="center"
                app:scale_base_height="120"
                app:scale_base_width="115"
                app:scale_height="120"
                app:scale_left="276"
                app:scale_top="10"
                app:scale_width="115">

                <TextView
                    android:id="@+id/cate_military"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="군사"
                    android:textColor="@color/darker_gray2"
                    android:textStyle="bold"
                    app:scale_height="25"
                    app:scale_left="10"
                    app:scale_textsize="20"
                    app:scale_top="5"
                    app:scale_width="70" />

            </com.ssomai.android.scalablelayout.ScalableLayout>


            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/scalable_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_round"
                android:backgroundTint="#C7E3E3"
                android:clickable="true"
                android:elevation="5dp"
                android:gravity="center"
                app:scale_base_height="120"
                app:scale_base_width="115"
                app:scale_height="120"
                app:scale_left="142.5"
                app:scale_top="10"
                app:scale_width="115">

                <TextView
                    android:id="@+id/cate_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="사회"
                    android:textColor="@color/darker_gray2"
                    android:textStyle="bold"
                    app:scale_height="25"
                    app:scale_left="10"
                    app:scale_textsize="20"
                    app:scale_top="5"
                    app:scale_width="70" />

            </com.ssomai.android.scalablelayout.ScalableLayout>


            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/scalable_politics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_round"
                android:backgroundTint="#B0D8D7"
                android:clickable="true"
                android:elevation="5dp"
                android:gravity="center"
                app:scale_base_height="120"

                app:scale_base_width="115"
                app:scale_height="120"
                app:scale_left="9"
                app:scale_textsize="20"
                app:scale_top="10"
                app:scale_width="115">

                <TextView
                    android:id="@+id/cate_politics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="정치"
                    android:textColor="@color/darker_gray2"
                    android:textStyle="bold"
                    app:scale_height="25"
                    app:scale_left="10"
                    app:scale_textsize="20"
                    app:scale_top="5"
                    app:scale_width="70" />

            </com.ssomai.android.scalablelayout.ScalableLayout>

        </com.ssomai.android.scalablelayout.ScalableLayout>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <FrameLayout
        android:id="@+id/frame_category2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/white"
            app:scale_base_height="140"
            app:scale_base_width="400">


            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/scalable_IT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_round"
                android:backgroundTint="#FFDED9"
                android:clickable="true"
                android:elevation="5dp"
                android:gravity="center"
                app:scale_base_height="120"
                app:scale_base_width="115"
                app:scale_height="120"
                app:scale_left="276"
                app:scale_top="10"
                app:scale_width="115">

                <TextView
                    android:id="@+id/cate_IT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="IT/과학"
                    android:textColor="@color/darker_gray2"
                    android:textStyle="bold"
                    app:scale_height="25"
                    app:scale_left="10"
                    app:scale_textsize="20"
                    app:scale_top="5"
                    app:scale_width="70" />
            </com.ssomai.android.scalablelayout.ScalableLayout>


            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/scalable_culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_round"
                android:backgroundTint="#FF9B8C"
                android:clickable="true"
                android:elevation="5dp"
                android:gravity="center"
                app:scale_base_height="120"
                app:scale_base_width="115"
                app:scale_height="120"
                app:scale_left="9"
                app:scale_top="10"
                app:scale_width="115">

                <TextView
                    android:id="@+id/cate_culture"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="문화"
                    android:textColor="@color/darker_gray2"
                    android:textStyle="bold"
                    app:scale_height="25"
                    app:scale_left="10"
                    app:scale_textsize="20"
                    app:scale_top="5"
                    app:scale_width="70" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:id="@+id/scalable_economy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_background_round"
                android:backgroundTint="#FFBCB2"
                android:clickable="true"
                android:elevation="5dp"
                android:gravity="center"
                app:scale_base_height="120"
                app:scale_base_width="115"
                app:scale_height="120"
                app:scale_left="142.5"
                app:scale_top="10"
                app:scale_width="115">

                <TextView
                    android:id="@+id/cate_economy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="경제"
                    android:textColor="@color/darker_gray2"
                    android:textStyle="bold"
                    app:scale_height="25"
                    app:scale_left="10"
                    app:scale_textsize="20"
                    app:scale_top="5"
                    app:scale_width="70" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </com.ssomai.android.scalablelayout.ScalableLayout>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.45" />

    <FrameLayout
        android:id="@+id/frame_quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:scale_base_height="300"
            app:scale_base_width="400">


            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_background_round"
                android:elevation="5dp"
                app:scale_base_height="280"
                app:scale_base_width="382"
                app:scale_height="280"
                app:scale_left="9"
                app:scale_top="10"
                app:scale_width="382">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="단어퀴즈"
                    android:textColor="@color/darker_gray2"
                    android:textStyle="bold"
                    app:scale_height="25"
                    app:scale_left="10"
                    app:scale_textsize="20"
                    app:scale_top="10"
                    app:scale_width="100" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/aqua_background_round"
                    android:gravity="center"

                    app:scale_height="210"
                    app:scale_left="10"
                    app:scale_top="50"
                    app:scale_width="362" />

            </com.ssomai.android.scalablelayout.ScalableLayout>

        </com.ssomai.android.scalablelayout.ScalableLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="60"
            app:scale_base_width="400"
            android:background="@drawable/darker_gray_background">

            <ImageButton
                android:id="@+id/bottombar_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="0"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/home_lined" />

            <ImageButton
                android:id="@+id/bottombar_bookmark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="100"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/bookmark_lined" />

            <ImageButton
                android:id="@+id/bottombar_mypage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="200"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/mypage_lined" />

            <ImageButton
                android:id="@+id/bottombar_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="300"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/info_lined" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

    </FrameLayout>


</LinearLayout>
