<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7EBEA"
    tools:context=".MainActivity">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:id="@+id/scalableLayout"
        android:layout_width="394dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:scale_base_height="340"
        app:scale_base_width="2120">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/around"
            android:hint="검색어 입력"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="45dp"
            app:scale_height="310"
            app:scale_textsize="100"
            app:scale_top="30"
            app:scale_width="2120" />

        <ImageButton
            android:id="@+id/back_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:onClick="back"
            android:scaleType="fitXY"
            app:scale_height="150"
            app:scale_left="70"
            app:scale_top="110"
            app:scale_width="150"
            tools:ignore="OnClick"
            android:src="@drawable/back" />


        <ImageButton
            android:id="@+id/clearB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cross_icon"
            android:background="@android:color/transparent"
            android:backgroundTint="#d3d3d3"
            android:visibility="gone"
            app:scale_height="180"
            app:scale_left="1620"
            app:scale_top="100"
            app:scale_width="180" />

        <View
            android:id="@+id/lineView"
            android:layout_width="wrap_content"
            android:layout_height="0.3dp"
            android:background="#d3d3d3"
            android:visibility="gone"
            app:scale_height="180"
            app:scale_left="1830"
            app:scale_top="100"
            app:scale_width="5" />

        <ImageButton
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:scale_height="180"
            app:scale_left="1870"
            app:scale_top="100"
            app:scale_width="180"
            android:src="@drawable/search_icon" />
    </com.ssomai.android.scalablelayout.ScalableLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/frame_bottombar"
        app:layout_constraintEnd_toEndOf="@+id/scalableLayout"
        app:layout_constraintStart_toStartOf="@+id/scalableLayout"
        app:layout_constraintTop_toBottomOf="@+id/scalableLayout">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/scalableLayout2"
            android:layout_width="374dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scalableLayout"
            app:scale_base_height="280"
            app:scale_base_width="2120">

            <TextView
                android:id="@+id/recent_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:text="최근 검색어"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:scale_height="280"
                app:scale_textsize="100"
                app:scale_width="2120" />

            <Button
                android:id="@+id/recent_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="#00ff0000"
                android:paddingTop="1dp"
                android:text="최근 검색 닫기"

                app:scale_height="120"
                app:scale_left="1540"
                app:scale_textsize="75"
                app:scale_top="90"
                app:scale_width="530" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wordRe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recy"
            android:orientation="vertical"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedHeight="true"
            tools:listitem="@layout/item" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/recy"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constrainedHeight="true"
            tools:listitem="@layout/item_recent" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/darker_gray_background"
            app:scale_base_height="60"
            app:scale_base_width="400">

            <ImageButton
                android:id="@+id/bottombar_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="0"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/home_lined" />

            <ImageButton
                android:id="@+id/bottombar_bookmark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="100"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/bookmark_lined" />

            <ImageButton
                android:id="@+id/bottombar_mypage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="200"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/mypage_lined" />

            <ImageButton
                android:id="@+id/bottombar_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mere_white"
                android:clickable="true"
                app:scale_height="59"
                app:scale_left="300"
                app:scale_top="1"
                app:scale_width="100"
                app:srcCompat="@drawable/info_lined" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>




