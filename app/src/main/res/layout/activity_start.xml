<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/scalableLayout_startLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aqua_darker"
            app:layout_constraintBottom_toTopOf="@+id/scalableLayout"
            app:layout_constraintTop_toTopOf="parent"
            app:scale_base_height="300"
            app:scale_base_width="400">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:scale_height="260"
                app:scale_left="5"
                android:layout_gravity="center_vertical"
                app:scale_width="390"
                app:srcCompat="@drawable/logo_body" />

        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:id="@+id/scalableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/aqua_darker"
            app:scale_base_height="200"
            app:scale_base_width="400">

            <Button
                android:id="@+id/start_login_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/start_sign"
                android:backgroundTint="@color/white_fixed"
                android:fontFamily="@font/pretendard_bold"
                android:text="LOGIN"
                android:textColor="@color/aqua_darker"
                app:scale_height="50"
                app:scale_left="50"
                app:scale_textsize="20"
                app:scale_top="40"
                app:scale_width="300" />


            <Button
                android:id="@+id/start_signup_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/start_sign"
                android:fontFamily="@font/pretendard_bold"
                android:text="SIGN UP"
                android:textColor="@color/white_fixed"
                app:scale_height="50"
                app:scale_left="50"
                app:scale_textsize="20"
                app:scale_top="110"
                app:scale_width="300" />
        </com.ssomai.android.scalablelayout.ScalableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>