<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:paddingStart="20dp"
        android:paddingLeft="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#000000"
        app:titleTextAppearance="@style/Toolbar.TitleText">

    </androidx.appcompat.widget.Toolbar>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scale_base_height="80"
                app:scale_base_width="100">

                <TextView
                    android:id="@+id/wn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="단어"
                    android:textColor="#000000"
                    app:scale_height="12"
                    app:scale_left="4"
                    app:scale_textsize="7"
                    app:scale_top="3"
                    app:scale_width="90"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/wm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="설명"
                    android:textColor="#97000000"
                    app:scale_height="12"
                    app:scale_left="4"
                    app:scale_textsize="5"
                    app:scale_top="16"
                    app:scale_width="86"
                    app:textview_wrapcontent_direction="bottom"
                    app:textview_wrapcontent_movesiblings="true"
                    app:textview_wrapcontent_resizesurrounded="true"
                    tools:ignore="MissingPrefix" />

                <Button
                    android:id="@+id/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="더보기"
                    app:scale_height="12"
                    app:scale_left="7"
                    app:scale_textsize="5"
                    app:scale_top="50"
                    app:scale_width="86" />

            </com.ssomai.android.scalablelayout.ScalableLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="19dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">>

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:scale_base_height="70"
                app:scale_base_width="100">

                <TextView
                    android:id="@+id/news"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="관련기사"
                    android:textColor="#000000"
                    app:scale_height="12"
                    app:scale_left="4"
                    app:scale_textsize="7"
                    app:scale_top="3"
                    app:scale_width="90"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/news2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="내용"
                    android:textColor="#97000000"
                    app:scale_height="12"
                    app:scale_left="4"
                    app:scale_textsize="5"
                    app:scale_top="16"
                    app:scale_width="86"
                    app:textview_wrapcontent_direction="bottom"
                    app:textview_wrapcontent_movesiblings="true"
                    app:textview_wrapcontent_resizesurrounded="true"
                    tools:ignore="MissingPrefix" />


            </com.ssomai.android.scalablelayout.ScalableLayout>
        </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/frame_bottombar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/darker_gray_background"
                app:scale_base_height="60"
                app:scale_base_width="400">

                <ImageButton
                    android:id="@+id/bottombar_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mere_white"
                    android:clickable="true"
                    app:scale_height="59"
                    app:scale_left="0"
                    app:scale_top="1"
                    app:scale_width="100"
                    app:srcCompat="@drawable/home_lined" />

                <ImageButton
                    android:id="@+id/bottombar_bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mere_white"
                    android:clickable="true"
                    app:scale_height="59"
                    app:scale_left="100"
                    app:scale_top="1"
                    app:scale_width="100"
                    app:srcCompat="@drawable/bookmark_lined" />

                <ImageButton
                    android:id="@+id/bottombar_mypage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mere_white"
                    android:clickable="true"
                    app:scale_height="59"
                    app:scale_left="200"
                    app:scale_top="1"
                    app:scale_width="100"
                    app:srcCompat="@drawable/mypage_lined" />

                <ImageButton
                    android:id="@+id/bottombar_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mere_white"
                    android:clickable="true"
                    app:scale_height="59"
                    app:scale_left="300"
                    app:scale_top="1"
                    app:scale_width="100"
                    app:srcCompat="@drawable/info_lined" />
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
