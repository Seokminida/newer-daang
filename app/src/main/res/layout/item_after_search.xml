<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D7EBEA"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:scale_base_height="63"
            app:scale_base_width="100">

            <TextView
                android:id="@+id/wna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="단어"
                android:textColor="#000000"
                app:scale_height="12"
                app:scale_left="4"
                app:scale_textsize="7"
                app:scale_top="3"
                app:scale_width="90"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/wme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="설명"
                android:textColor="#97000000"
                android:maxLines="2"
                android:ellipsize="end"
                app:scale_height="12"
                app:scale_left="4"
                app:scale_textsize="5"
                app:scale_top="16"
                app:scale_width="86"
                tools:ignore="MissingPrefix" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#d3d3d3"
                app:scale_height="1"
                app:scale_left="5"
                app:scale_top="40"
                app:scale_width="89"
                />

            <TextView
                android:id="@+id/cate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:background="@drawable/round"
                android:backgroundTint="?attr/colorPrimary"
                app:scale_height="9"
                app:scale_left="5"
                app:scale_top="44.5"
                android:textColor="@color/black"
                app:scale_width="20"
                app:scale_textsize="4"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="7dp"
                app:textview_wrapcontent_direction="right"
                app:textview_wrapcontent_movesiblings="false"

                />

            <TextView
                android:id="@+id/hashT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:backgroundTint="#D7EBEA"
                android:text="# 해시태그  "
                android:textColor="@color/black"
                app:scale_height="9"
                app:scale_left="30"
                app:scale_textsize="4"
                app:scale_top="44.5"
                app:scale_width="20"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="7dp"
                app:textview_wrapcontent_resizesurrounded="false"
                app:textview_wrapcontent_direction="right"

                />

        </com.ssomai.android.scalablelayout.ScalableLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>