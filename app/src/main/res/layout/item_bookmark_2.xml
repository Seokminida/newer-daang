<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"  >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardBackgroundColor="@color/white_box"
        app:cardCornerRadius="15dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scale_base_height="120"
        app:scale_base_width="290">

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="용어샘플"
            android:textColor="@color/darker_gray_to_white"
            android:maxLines="1"
            android:ellipsize="end"
            app:scale_height="20"
            app:scale_left="10"
            app:scale_textsize="15"
            app:scale_top="5"
            app:scale_width="220"
            android:fontFamily="@font/pretendard_bold"/>

        <ImageButton
            android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#00FFFFFF"
            android:gravity="center_vertical|end"
            android:scaleType="fitEnd"
            app:scale_height="20"
            app:scale_left="240"
            app:scale_top="5"
            app:scale_width="20"
            app:srcCompat="@drawable/heart_empty_24_edited" />

        <ImageButton
            android:id="@+id/bin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:gravity="center_vertical"
            android:scaleType="fitEnd"
            app:scale_height="20"
            app:scale_left="260"
            app:scale_top="5"
            app:scale_width="20"
            app:srcCompat="@drawable/bin_24_edited" />


        <TextView
            android:id="@+id/term_meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="meaning sample goes here with meaning sample goes here"
            android:textColor="@color/darker_gray_to_white"
            android:maxLines="2"
            android:ellipsize="end"
            app:scale_height="31"
            app:scale_left="10"
            app:scale_textsize="12"
            app:scale_top="34"
            app:scale_width="270"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/darker_gray"
            app:scale_height="1"
            app:scale_left="10"
            app:scale_top="74"
            app:scale_width="270"
            android:fontFamily="@font/pretendard_regular"/>

        <TextView
            android:id="@+id/term_cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aqua_darker_background_round"
            android:gravity="center"
            android:textColor="@color/darker_gray"
            android:text="정치"
            app:scale_height="25"
            app:scale_left="10"
            app:scale_textsize="12"
            app:scale_top="85"
            app:scale_width="50"
            android:fontFamily="@font/pretendard_regular"/>

        <TextView
            android:id="@+id/term_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aqua_background_round"
            android:gravity="center_vertical"
            android:text="해시1"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/darker_gray"
            app:scale_height="25"
            app:scale_left="65"
            app:scale_textsize="12"
            app:scale_top="85"
            app:scale_width="165"
            android:fontFamily="@font/pretendard_regular"/>

        <ImageView
            android:id="@+id/tag_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aqua_background_round"
            android:gravity="center"

            android:scaleType="center"
            android:src="@drawable/etc_35"
            app:scale_height="25"
            app:scale_left="235"
            app:scale_top="85"
            app:scale_width="45" />


    </com.ssomai.android.scalablelayout.ScalableLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>